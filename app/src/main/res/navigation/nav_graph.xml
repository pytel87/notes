<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/nav_graph"
            app:startDestination="@id/splashFragment">
    <fragment android:id="@+id/splashFragment" android:name="com.pytel.notes.framework.ui.splash.SplashFragment"
              android:label="fragment_splash" tools:layout="@layout/fragment_splash">
        <action android:id="@+id/action_splashFragment_to_notesFragment"
                app:destination="@id/notesFragment"
                app:launchSingleTop="true"
                app:popUpTo="@id/splashFragment"
                app:popUpToInclusive="true"/>
    </fragment>
    <fragment android:id="@+id/notesFragment" android:name="com.pytel.notes.framework.ui.notes.NotesFragment"
              android:label="fragment_notes" tools:layout="@layout/fragment_notes">
    </fragment>

</navigation>